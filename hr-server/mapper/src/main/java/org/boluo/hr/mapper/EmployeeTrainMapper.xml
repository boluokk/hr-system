<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.boluo.hr.mapper.EmployeeTrainMapper">
    <sql id="column"> id, employee_id, create_data, train_content, remark</sql>
    <resultMap id="BaseResultMap" type="org.boluo.hr.pojo.EmployeeTrain">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="employee_id" property="employeeId" jdbcType="INTEGER"/>
        <result column="create_data" property="createData" jdbcType="DATE"/>
        <result column="train_content" property="trainContent" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
    </resultMap>
    <resultMap id="hasEmployeeResultMap" type="org.boluo.hr.pojo.EmployeeTrain" extends="BaseResultMap">
        <association property="employee" javaType="org.boluo.hr.pojo.Employee">
            <id column="employee_id" property="id"/>
            <result column="employeeName" property="name"/>
        </association>
    </resultMap>
    <select id="selectAllWithEmployeeName" resultMap="hasEmployeeResultMap">
        select e.name as employeeName, et.*
        from employee_train et,
             employee e
        where et.employee_id = e.id
    </select>
    <select id="selectAll" resultMap="hasEmployeeResultMap">
        select <include refid="column"/>
        from employee_train
    </select>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select <include refid="column"/>
        from employee_train
        where id = #{id,jdbcType=INTEGER}
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from employee_train
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <insert id="insertEmployeeTrain" parameterType="org.boluo.hr.pojo.EmployeeTrain">
        insert into employee_train
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="employeeId != null">
                employee_id,
            </if>
            <if test="createData != null">
                create_data,
            </if>
            <if test="trainContent != null">
                train_content,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="employeeId != null">
                #{employeeId,jdbcType=INTEGER},
            </if>
            <if test="createData != null">
                #{createData,jdbcType=DATE},
            </if>
            <if test="trainContent != null">
                #{trainContent,jdbcType=VARCHAR},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKey" parameterType="org.boluo.hr.pojo.EmployeeTrain">
        update employee_train
        <set>
            <if test="employeeId != null">
                employee_id = #{employeeId,jdbcType=INTEGER},
            </if>
            <if test="createData != null">
                create_data = #{createData,jdbcType=DATE},
            </if>
            <if test="trainContent != null">
                create_data = #{trainContent,jdbcType=VARCHAR},
            </if>
            <if test="remark != null">
                remark = #{remark,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>