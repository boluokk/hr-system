<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.boluo.hr.mapper.OperatorLogMapper">
    <resultMap id="BaseResultMap" type="org.boluo.hr.pojo.OperatorLog">
        <id column="id" property="id"/>
        <result column="create_date" property="createDate"/>
        <result column="event" property="event"/>
        <result column="hr_id" property="hrId"/>
        <result column="address" property="address"/>
        <result column="type" property="type"/>
        <result column="content" property="content"/>
    </resultMap>
    <resultMap id="OperatorHeaderCountResultMap" type="org.boluo.hr.pojo.OperatorHeaderCount">
        <result column="create_date" property="createDate"/>
        <result column="content" property="content"/>
        <result column="operator_name" property="operatorName"/>
        <result property="operatorLogCount" column="operator_log_count"/>
    </resultMap>
    <sql id="column">id, create_date, event, hr_id, address, type, content</sql>
    <select id="selectCount" resultType="integer">
        select count(*) as operator_log_count
        from operator_log
    </select>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="column"/>
        from operator_log
        where id = #{id,jdbcType=INTEGER}
    </select>
    <select id="selectAllOperatorLog" resultMap="BaseResultMap">
        select
        <include refid="column"/>
        from operator_log
        order by id desc
    </select>
    <select id="selectOperatorHeaderCount" resultMap="OperatorHeaderCountResultMap">
        select ol.create_date,
               ol.content,
               h.name                              as operator_name,
               (select count(1) from operator_log) as operator_log_count
        from operator_log as ol
                 join hr as h on h.id = ol.hr_id
        where type != 'GET'
        order by ol.id desc
        limit 1
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete
        from operator_log
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <insert id="insertOperatorLog" parameterType="org.boluo.hr.pojo.OperatorLog">
        insert into operator_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createDate != null">
                create_date,
            </if>
            <if test="event != null">
                `event`,
            </if>
            <if test="hrId != null">
                hr_id,
            </if>
            <if test="address != null">
                address,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="content != null">
                content,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="createDate != null">
                #{createDate},
            </if>
            <if test="event != null">
                #{event,jdbcType=VARCHAR},
            </if>
            <if test="hrId != null">
                #{hrId,jdbcType=INTEGER},
            </if>
            <if test="address != null">
                #{address,jdbcType=VARCHAR},
            </if>
            <if test="type != null">
                #{type,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                #{content,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKey" parameterType="org.boluo.hr.pojo.OperatorLog">
        update operator_log
        <set>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="event != null">
                `event` = #{event,jdbcType=VARCHAR},
            </if>
            <if test="hrId != null">
                hr_id = #{hrId,jdbcType=INTEGER},
            </if>
            <if test="address != null">
                address = #{address,jdbcType=VARCHAR},
            </if>
            <if test="type != null">
                type = #{type,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                content = #{content,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>